              d='M11 21.5C16.5228 21.5 21 17.0228 21 11.5C21 5.97715 16.5228 1.5 11 1.5C5.47715 1.5 1 5.97715 1 11.5C1 17.0228 5.47715 21.5 11 21.5Z'
              stroke='black'
              stroke-width='2'
              stroke-linecap='round'
              stroke-linejoin='round'
            />
            <path
              d='M7 11.5C7 17.0228 8.79086 21.5 11 21.5C13.2091 21.5 15 17.0228 15 11.5C15 5.97715 13.2091 1.5 11 1.5C8.79086 1.5 7 5.97715 7 11.5Z'
              stroke='black'
              stroke-width='2'
              stroke-linecap='round'
              stroke-linejoin='round'
            />
            <path
              d='M1 11.5H21'
              stroke='black'
              stroke-width='2'
              stroke-linecap='round'
              stroke-linejoin='round'
            />
          </svg>
        </a>
      )
    }
    {
      email && (
        <a href={email}>
