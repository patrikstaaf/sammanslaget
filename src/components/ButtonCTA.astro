---
export interface Props {
  text: string;
  url: string;
}

const { text, url } = Astro.props as Props;
---

<button
  class='bg-[#DE3831] hover:bg-[#942621] rounded-lg py-2 px-10 text-white font-normal text-[20px] transition transform hover:-translate-y-1 motion-reduce:transition-none motion-reduce:hover:transform-none'
>
  <a href={url}>{text}</a>
</button>
